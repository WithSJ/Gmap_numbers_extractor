<Home_Screen>:
    name: "home"
    BoxLayout:
        orientation:'vertical'

        MDToolbar:
            title: app.APP_NAME
            size_hint: 1,.08
            right_action_items: [ ["account", lambda x:app.updateList()]] 
            elevation: 5
        
        MDBottomNavigation:
            id: android_tabs
            
            MDBottomNavigationItem:
                name: "search_scr"
                text: f"SEARCH"
                icon: "google-maps"

                MDBoxLayout:
                    orientation: 'vertical'
                    spacing: dp(5)
                    padding: dp(10)

                    MDBoxLayout:
                        adaptive_height: True
                        
                        
                        MDTextField:
                            id: region_field
                            hint_text: 'Region'
                        
                        MDTextField:
                            id: keyword_field
                            hint_text: 'Key Words'
                        
                        MDTextField:
                            id: code_field
                            hint_text: 'Country Code'
                        
                    MDBoxLayout:
                        adaptive_height:True
                        MDTextField:
                            id: url_field
                            hint_text: 'Search'
                            mode : "fill"
                        
                        MDIconButton:
                            icon: 'magnify'
                            on_release: root.search_fields(region_field.text,keyword_field.text,code_field.text,url_field.text)

                                    
                    MDBoxLayout:
                        adaptive_height:True
                        
                        MDProgressBar:
                            id: progress_bar
                            value: 0 
                            size_hint: .8,None 
                            pos_hint: {"center_x":.5,"center_y":.5}
                        
                        MDIconButton:
                            icon: 'close'
                            # on_release: root.search_fields()
                        
                    ScrollView:
                        MDList:
                            id: search_items
              
            