<Home_Screen>:
    name: "home"
    BoxLayout:
        orientation:'vertical'

        MDToolbar:
            title: app.APP_NAME
            size_hint: 1,.08
            elevation: 5
        
        MDBottomNavigation:
            id: android_tabs
            
            MDBottomNavigationItem:
                name: "search_scr"
                icon: "google-maps"

                MDBoxLayout:
                    orientation: 'vertical'
                    spacing: dp(5)
                    padding: dp(10)

                    MDBoxLayout:
                        adaptive_height: True
                        
                        
                        MDTextField:
                            id: region_field
                            hint_text: 'Filename'
                        
                        
                        MDTextField:
                            id: code_field
                            hint_text: 'Country Code'

                    MDBoxLayout:
                        adaptive_height:True
                        MDTextField:
                            id: filter_field
                            hint_text: 'Filter (Use , for more numbers)'                
        
                    MDBoxLayout:
                        adaptive_height:True
        
                        MDTextField:
                            id: url_field
                            hint_text: 'Search'
                            mode : "fill"
                        
                        
                        MDIconButton:
                            icon: 'plus'
                            on_release: root.addSearchList(region_field.text,code_field.text,url_field.text,filter_field.text)

                                    
                    MDBoxLayout:
                        adaptive_height:True
                        
                        MDProgressBar:
                            id: progress_bar
                            value: 0 
                            size_hint: .6,None 
                            pos_hint: {"center_x":.5,"center_y":.5}
                        
                        
                    ScrollView:
                        MDList:
                            id: search_items

                    MDRaisedButton:
                        text: "Click to Start"
                        pos_hint: {"center_x":.5,"center_y":.5}
                        size_hint: .8,None 
                        on_release: root.search_fields()
                        
            